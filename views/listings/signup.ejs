<% layout("/layouts/boilerplate.ejs") %>

<div class="row px-5 py-5 spe-font">

    <h1 class="col-6 offset-3">SignUp On Google Notes</h1><br><br><br><br><br>
    <div class="col-8 offset-3">
        <form class="needs-validation" method="POST" action="/signup" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">User Name</label>
                <input name="username" id="username" class="form-control" type="text" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">E-Mail</label>
                <input name="email" id="email" class="form-control" type="text" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" class="form-control" type="password" required>
            </div><br>

            <button class="btn btn-primary">Sign-Up</button><br><br><br><br><br>
        </form>
    </div><hr>
</div> 